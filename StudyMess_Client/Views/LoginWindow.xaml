<Window x:Class="StudyMess_Client.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Вход"
        Height="380"
        Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid>
        <Border
            Background="{DynamicResource MaterialDesignCardBackground}"
            CornerRadius="18"
            Margin="0"
            Padding="32"
            MouseLeftButtonDown="Window_MouseLeftButtonDown">
            <StackPanel VerticalAlignment="Top">
                <TextBlock Text="Вход в StudyMess"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0,24,0,24"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource MaterialDesignBody}" />

                <TextBox
                    x:Name="LoginTextBox"
                    materialDesign:HintAssist.Hint="Логин"
                    Margin="0,0,0,10"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    FontSize="15"/>

                <PasswordBox
                    x:Name="PasswordBox"
                    materialDesign:HintAssist.Hint="Пароль"
                    Margin="0,0,0,18"
                    Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                    FontSize="15"/>

                <Button
                    Content="Войти"
                    Height="52"
                    Margin="0,0,0,8"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="{DynamicResource MaterialDesignAccent}"
                    Foreground="Black"
                    FontWeight="Bold"
                    Click="Login_Click"
                    IsDefault="True"/>

                <Button
                    Content="Ещё не были? Зарегистрируйтесь!"
                    Height="36"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Foreground="{DynamicResource MaterialDesignBody}"
                    Click="Register_Click"
                    HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        <Button Width="32" Height="32"
            Margin="328,8,40,340"
            Style="{StaticResource MaterialDesignToolButton}"
            ToolTip="Свернуть"
            Click="Minimize_Click">
            <TextBlock Text="—" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Bold"/>
        </Button>
        <Button Width="32" Height="32"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,8,8,0"
            Style="{StaticResource MaterialDesignToolButton}"
            ToolTip="Закрыть"
            Click="CloseButton_Click"
            Panel.ZIndex="1">
            <TextBlock Text="✕" Foreground="Red" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
        </Button>
    </Grid>
</Window>
